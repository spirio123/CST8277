<hibernate-configuration>
   <session-factory>
      <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
      <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
      <property name="hibernate.connection.username">cst8277</property>
      <property name="hibernate.connection.password">8277</property>
      <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/databank?useUnicode=true&amp;useSSL=false&amp;allowPublicKeyRetrieval=true</property>
      <property name="hibernate.format_sql">true</property>
      <property name="hibernate.show_sql">true</property>
      <!-- Disable the second-level cache  -->
      <property name="cache.provider_class">org.hibernate.jpa.HibernatePersistenceProvider</property>
      <property name="current_session_context_class">thread</property>
   </session-factory>
</hibernate-configuration>